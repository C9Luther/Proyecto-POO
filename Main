public class Main {
    public static void main(String[] args) {
        Autor autor1 = new Autor("Gabriel", "García Márquez", "Colombiano");
        Autor autor2 = new Autor("Mario", "Vargas Llosa", "Peruano");

        Libro libro1 = new Libro("Cien Años de Soledad", autor1);
        Libro libro2 = new Libro("La ciudad y los perros", autor2);

        Biblioteca biblioteca = new Biblioteca("Biblioteca Central");
        biblioteca.agregarLibro(libro1);
        biblioteca.agregarLibro(libro2);
        biblioteca.mostrarLibros();

        Usuario usuario1 = new Usuario("Juan", "Pérez", 101);

        // Uso de la interfaz
        usuario1.realizarPrestamo(libro1);
        usuario1.devolverLibro(libro1);

        // Polimorfismo
        System.out.println("\n=== Demostración de Polimorfismo ===");
        Persona[] personas = { autor1, autor2, usuario1 };
        for (Persona p : personas) {
            System.out.println(p.mostrarInfo() + " → " + p.rol());
        }
    }
}

