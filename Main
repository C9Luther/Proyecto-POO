public class Main {
    public static void main(String[] args) {
        Autor autor1 = new Autor("Gabriel", "GarcÃ­a MÃ¡rquez", "Colombiano");
        Autor autor2 = new Autor("Mario", "Vargas Llosa", "Peruano");

        Libro libro1 = new Libro("Cien AÃ±os de Soledad", autor1);
        Libro libro2 = new Libro("La ciudad y los perros", autor2);

        Biblioteca biblioteca = new Biblioteca("Biblioteca Central");
        biblioteca.agregarLibro(libro1);
        biblioteca.agregarLibro(libro2);
        biblioteca.mostrarLibros();

        Usuario usuario1 = new Usuario("Juan", "PÃ©rez", 101);

        Prestamo prestamo = new Prestamo(libro1, usuario1);
        System.out.println(prestamo);

        biblioteca.mostrarLibros();

        prestamo.devolverLibro();
        biblioteca.mostrarLibros();

        // ðŸ§  POLIMORFISMO
        System.out.println("\n=== DemostraciÃ³n de Polimorfismo ===");
