public class Usuario extends Persona implements AccionesBiblioteca {
    private int codigoUsuario;

    public Usuario(String nombre, String apellido, int codigoUsuario) {
        super(nombre, apellido);
        this.codigoUsuario = codigoUsuario;
    }

    @Override
    public String mostrarInfo() {
        return "Usuario: " + super.mostrarInfo() + " | Código: " + codigoUsuario;
    }

    @Override
    public String rol() {
        return "Lector y prestatario de libros";
    }

    // Métodos de la interfaz
    @Override
    public void realizarPrestamo(Libro libro) {
        if (libro.isDisponible()) {
            libro.prestar();
            System.out.println(getNombre() + " ha prestado el libro '" + libro.getTitulo() + "'");
        } else {
            System.out.println("El libro '" + libro.getTitulo() + "' no está disponible.");
        }
    }

    @Override
    public void devolverLibro(Libro libro) {
        libro.devolver();
        System.out.println(getNombre() + " ha devuelto el libro '" + libro.getTitulo() + "'");
    }
}


